<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background">

    <TextView
        android:id="@+id/attacker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attacker Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attacker_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 0 / DEF: 0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/target_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/target_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 0 / DEF: 0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/battle_outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle Outcome"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

</LinearLayout>